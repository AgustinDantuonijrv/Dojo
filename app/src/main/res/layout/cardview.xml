<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="41dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/diaparte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles:" />

        <TextView
            android:id="@+id/textoejercicio"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:text="@string/ejercicio" />

        <TextView
            android:id="@+id/textoobservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/observaciones" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="187dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/resultadosdetalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="resultadodetalles"/>

        <TextView
            android:id="@+id/resultadosejercicio"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="ejercicio" />

        <TextView
            android:id="@+id/resultadosobservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="observaciones" />

    </LinearLayout>
</LinearLayout>


